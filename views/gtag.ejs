
<button id="addYoursButton" style="align-self: center; margin-left: 45%;">Add yours</button>
<!-- Hidden form to display on button click -->
<div id="addForm" class="hidden" style="margin-left: 38%; margin-top: 2%;" >
    <form id="dataForm" method="post" action="/gallery" >
      <label for="name">Enter Name:</label>
      <input type="text" id="name" name="name" required><br>
      <label>Select Color:</label><br>
      <input type="radio" id="blue" name="color" value="blue" >
      <label for="blue">Blue</label><br>
      <input type="radio" id="green" name="color" value="green">
      <label for="green">Green</label><br>
      <input type="radio" id="orange" name="color" value="orange">
      <label for="orange">Orange</label><br>
      <input type="radio" id="brown" name="color" value="brown">
      <label for="brown">Brown</label><br>
      <input type="radio" id="purple" name="color" value="purple">
      <label for="purple">Purple</label><br>
      <input type="radio" id="yellow" name="color" value="yellow">
      <label for="yellow">Yellow</label><br>
      
      <label for="message">Insta id </label><br>
      <input type="text" id="insta" name="instaid" ></input><br>

      <label for="message">Enter Message:</label><br>
      <textarea id="message" name="message" required></textarea><br>
      
      <button type="submit">Submit</button>
    </form>
    <script src="/static/js/galleryform.js"></script>

  </div>
<div class="container bootstrap snippets bootdeys">
    <div class="row">
        <% i.forEach((item) => { %>
        <div class="col-md-4 col-sm-6 content-card">
            <div class="card-big-shadow">
                <div class="card card-just-text" data-background="<%= item.color %>" data-color="<%= item.color %>" data-radius="none">
                    <div class="content">
                        <h4 class="title" style="color: white;"><a href="<%= item.url %>" style="color: white;"  target="_blank"><%= item.name %></a></h4>
                        <h6 class="category"><%= item.createdAt %></h6>
                        <p class="description"><%= item.tag %></p>
                    </div>
                </div> <!-- end card -->
            </div>
        </div>
        <% }) %>

    </div>
</div>

